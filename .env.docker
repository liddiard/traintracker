# Database configuration for Docker
DATABASE_URL=file:/app/db/app.db

# Web Push VAPID keys
# Generate these with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your-public-key-here
VAPID_PRIVATE_KEY=your-private-key-here
VAPID_SUBJECT=mailto:your-email@example.com

# Enable notifications in production
ENABLE_NOTIFICATIONS=true

# Container nginx exposed port
# For VPS deployment with host nginx: This is the localhost port that host nginx will proxy to
# For standalone deployment: This is the public port
# Default: 8724 (avoids conflicts with other Node.js apps on port 3000)
PORT=8724
